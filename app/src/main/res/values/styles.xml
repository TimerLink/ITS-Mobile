<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="BaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item</item>
    	<item name="android:textColorPrimary">@color/text_color_primary</item>
		<item name="android:textColorSecondary">@color/text_color_secondary</item>
		<item name="android:actionDropDownStyle">@style/Spinner</item>
		<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>
    
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_actionbar</item>
    </style>
    
	<style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:background">@drawable/selectable_item</item>
	</style>

    <style name="Spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_ab</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@drawable/selectable_item</item>
    </style>
    
    <style name="ListView">
        <item name="android:dividerHeight">0.1dp</item>
    </style>
    
    <style name="ListViewItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:background">@drawable/listview_item</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>
    
	<style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
		<item name="android:windowEnterAnimation">@anim/popup_enter</item>     
		<item name="android:windowExitAnimation">@anim/popup_exit</item>     
	</style>
    
	<style name="SingleLineTextView">
	    <item name="android:singleLine">true</item>
	    <item name="android:ellipsize">end</item>
	</style>
    
	<style name="ListHeaderTextView" parent="@style/SingleLineTextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:paddingLeft">@dimen/list_header_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_header_padding_horizontal</item>
	    <item name="android:paddingTop">@dimen/list_header_padding_vertical</item>
	    <item name="android:paddingBottom">@dimen/list_header_padding_vertical</item>
	    <item name="android:textSize">@dimen/list_header_title_size</item>
	</style>
    
	<style name="PaddingLayout" parent="@android:style/Widget.Holo">
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
	    <item name="android:paddingTop">@dimen/activity_horizontal_padding</item>
	    <item name="android:paddingBottom">@dimen/activity_horizontal_padding</item>
	</style>
    
	<style name="FlatButton" parent="@android:style/Widget.Holo.Button">
	    <item name="android:textColor">@color/text_color_primary</item>
		<item name="android:textSize">@dimen/default_text_size</item>
		<item name="android:background">@drawable/selectable_item</item>
	</style>
	
</resources>
