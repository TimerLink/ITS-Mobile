<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<com.baidu.mapapi.map.MapView
	    android:id="@+id/bmapView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:clickable="true" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/round_button_horizontal_margin"
        android:layout_marginBottom="@dimen/round_button_horizontal_margin" >

	    <ImageButton
	        android:id="@+id/btnMyLocation"
	        android:layout_width="@dimen/round_button_size"
	        android:layout_height="@dimen/round_button_size"
	        android:src="@drawable/ic_my_location"
	        android:background="@drawable/round_button" />
	
	    <ImageButton
	        android:id="@+id/btnNearByStation"
	        android:layout_width="@dimen/round_button_size"
	        android:layout_height="@dimen/round_button_size"
	        android:src="@drawable/ic_bus_small"
	        android:background="@drawable/round_button"
	        android:layout_marginLeft="@dimen/round_button_horizontal_margin" />
    
    </LinearLayout>

</RelativeLayout>
