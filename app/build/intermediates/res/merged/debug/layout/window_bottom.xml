<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorset_success"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/bottom_window_vertical_padding"
    android:paddingLeft="@dimen/bottom_window_horizontal_padding"
    android:paddingRight="@dimen/bottom_window_horizontal_padding"
    android:paddingTop="@dimen/bottom_window_vertical_padding" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SingleLineTextView"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/default_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        
	    <ImageView
	        android:id="@+id/chevron"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_chevron_right"
	        android:visibility="gone" />
        
	    <ImageView
	        android:id="@+id/close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_close"
	        android:visibility="gone" />
	    
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Androidworkspace/ITS-Mobile-AS/app/src/main/res/layout/window_bottom.xml -->