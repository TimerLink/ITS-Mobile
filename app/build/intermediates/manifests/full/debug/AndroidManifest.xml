        <service
            android:name="cn.edu.hit.itsmobile.service.HttpService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name="cn.edu.hit.itsmobile.BroadCastLine" >
            <intent-filter android:priority="3" >
                <action android:name="bc.line" />
            </intent-filter>
        </receiver>
    </application>

</manifest>